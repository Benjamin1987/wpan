<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="1.5">

        <TextView
            android:id="@+id/titleView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:textSize="@dimen/fontSize_18sp"
            android:textColor="@color/font_333"
            android:text="白银"/>

        <TextView
            android:id="@+id/unitView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dp_5"
            android:textSize="@dimen/fontSize_13sp"
            android:textColor="@color/font_666"
            android:text="(元/千克)"/>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1.5">

        <TextView
            android:id="@+id/priceView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3780"
            android:textSize="@dimen/fontSize_25sp"
            android:textColor="@drawable/sel_index_item_text"
            android:layout_centerHorizontal="true"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@id/priceView"
            android:layout_centerHorizontal="true">

            <TextView
                android:id="@+id/percentView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+0.47%"
                android:textSize="@dimen/fontSize_13sp"
                android:textColor="@drawable/sel_index_item_text"/>

            <TextView
                android:id="@+id/valueView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+18"
                android:textSize="@dimen/fontSize_13sp"
                android:textColor="@drawable/sel_index_item_text"
                android:layout_marginLeft="@dimen/dp_10"/>

        </LinearLayout>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true">

            <TextView
                android:id="@+id/highPriceView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="最高 3900"
                android:textSize="@dimen/fontSize_13sp"
                android:textColor="@color/font_333"/>

            <TextView
                android:id="@+id/todayPriceView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="今开 3755"
                android:textSize="@dimen/fontSize_13sp"
                android:textColor="@color/font_333"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_toRightOf="@id/highPriceView"/>

            <TextView
                android:id="@+id/lowPriceView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/highPriceView"
                android:layout_marginTop="@dimen/dp_5"
                android:text="最低 3650"
                android:textSize="@dimen/fontSize_13sp"
                android:textColor="@color/font_333"/>

            <TextView
                android:id="@+id/yesterdayPriceView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/lowPriceView"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_toRightOf="@id/lowPriceView"
                android:text="昨开 3600"
                android:textSize="@dimen/fontSize_13sp"
                android:textColor="@color/font_333"/>

        </RelativeLayout>

    </RelativeLayout>

</LinearLayout>