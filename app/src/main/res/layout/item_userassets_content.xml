<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingLeft="@dimen/dp_15">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/dp_20"
        android:paddingRight="@dimen/dp_15"
        android:paddingTop="@dimen/dp_20">

        <TextView
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="2017.01.01"
            android:textColor="@color/font_666"
            android:textSize="11sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_toRightOf="@id/time">

            <LinearLayout
                android:id="@+id/silverLayout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="白银"
                    android:textColor="@color/font_333"
                    android:textSize="@dimen/fontSize_15sp" />

                <TextView
                    android:id="@+id/silverMoney"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_10"
                    android:text="+1000.00"
                    android:textColor="@color/default_red"
                    android:textSize="@dimen/fontSize_15sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/oilLayout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="原油"
                    android:textColor="@color/font_333"
                    android:textSize="@dimen/fontSize_15sp" />

                <TextView
                    android:id="@+id/oilMoney"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_10"
                    android:text="+1000.00"
                    android:textColor="@color/default_red"
                    android:textSize="@dimen/fontSize_15sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/cafeLayout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="咖啡"
                    android:textColor="@color/font_333"
                    android:textSize="@dimen/fontSize_15sp" />

                <TextView
                    android:id="@+id/cafeMoney"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_10"
                    android:text="-1000.00"
                    android:textColor="@color/default_green"
                    android:textSize="@dimen/fontSize_15sp" />
            </LinearLayout>
        </LinearLayout>

    </RelativeLayout>

    <include layout="@layout/ly_line" />
</LinearLayout>