<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_product_history_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_22"
        android:text="白银3685 (元/千克)"
        android:textColor="@color/font_333"
        android:textSize="@dimen/fontSize_16sp" />

    <TextView
        android:id="@+id/tv_history_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/tv_product_history_name"
        android:layout_below="@id/tv_product_history_name"
        android:layout_marginBottom="@dimen/dp_22"
        android:layout_marginTop="@dimen/dp_10"
        android:text="2016.12.25 12:24:24"
        android:textColor="@color/color_666666"
        android:textSize="@dimen/fontSize_11sp" />

    <TextView
        android:id="@+id/tv_history_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/tv_product_history_name"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/dp_15"
        android:text="8元/100克"
        android:textColor="@color/default_red"
        android:textSize="@dimen/fontSize_14sp" />


    <TextView
        android:id="@+id/tv_history_profit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/tv_history_time"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/dp_15"
        android:text="止盈10%"
        android:textColor="@color/font_333"
        android:textSize="@dimen/fontSize_14sp" />

    <TextView
        android:id="@+id/tv_history_stop_loss"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/tv_history_time"
        android:layout_marginRight="@dimen/dp_9"
        android:layout_toLeftOf="@id/tv_history_profit"
        android:text="止损无"
        android:textColor="@color/font_333"
        android:textSize="@dimen/fontSize_14sp" />

</RelativeLayout>