<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="41dp"
    android:layout_marginLeft="13dp"
    android:layout_marginRight="13dp">

    <Button
        android:id="@+id/rightText"
        android:layout_width="141dp"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="@dimen/dp_5"
        android:background="@drawable/login_selector"
        android:text="发送验证码"
        android:textColor="@color/white"
        android:textSize="@dimen/fontSize_16sp" />

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginRight="@dimen/dp_11"
        android:layout_toLeftOf="@id/rightText"
        android:background="@drawable/bg_edittext"
        android:paddingLeft="@dimen/dp_16">


        <ImageView
            android:visibility="gone"
            android:id="@+id/editIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:src="@mipmap/icon_phone" />

        <TextView
            android:visibility="gone"
            android:id="@+id/leftText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_5"
            android:layout_toRightOf="@id/editIcon"
            android:text="密码"
            android:textColor="@color/color_666666" />

        <View
            android:visibility="gone"
            android:id="@+id/lineView"
            android:layout_width="1dp"
            android:layout_height="23dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_5"
            android:layout_marginRight="@dimen/dp_5"
            android:layout_toRightOf="@id/leftText"
            android:background="@color/color_cccccc" />

        <ImageView
            android:layout_alignParentRight="true"
            android:id="@+id/editEye"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/dp_10"
            android:src="@mipmap/icon_password_2"
            />


        <com.xinyu.mwp.view.ClearEditText
            android:id="@+id/editText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_8"
            android:layout_toLeftOf="@id/editEye"
            android:layout_toRightOf="@id/lineView"
            android:background="@null"
            android:hint="请输入用户名"
            android:paddingRight="@dimen/dp_5"
            android:singleLine="true"
            android:textColor="@color/font_444"
            android:textColorHint="@color/color_cccccc"
            android:textCursorDrawable="@drawable/edit_cursor"
            android:textSize="@dimen/fontSize_14sp" />

    </RelativeLayout>


</RelativeLayout>