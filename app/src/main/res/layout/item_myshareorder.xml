<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingLeft="@dimen/dp_15">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/dp_16"
        android:paddingRight="@dimen/dp_15"
        android:paddingTop="@dimen/dp_16">

        <RelativeLayout
            android:id="@+id/titleLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="白银"
                android:textColor="@color/font_333"
                android:textSize="@dimen/dp_15" />

            <FrameLayout
                android:id="@+id/statusLayout"
                android:layout_width="@dimen/dp_12"
                android:layout_height="@dimen/dp_12"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_7"
                android:layout_toRightOf="@id/name"
                android:background="@color/default_green">

                <TextView
                    android:id="@+id/status"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="top|center_horizontal"
                    android:text="空"
                    android:textColor="@color/white"
                    android:textSize="@dimen/fontSize_10sp" />
            </FrameLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:text="收益"
                android:textColor="@color/font_666"
                android:textSize="@dimen/dp_13" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/contentLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/titleLayout"
            android:layout_marginTop="@dimen/dp_10">

            <TextView
                android:id="@+id/createTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="111111111"
                android:textColor="@color/font_666"
                android:textSize="@dimen/fontSize_10sp" />

            <TextView
                android:id="@+id/createPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_toRightOf="@id/createTime"
                android:text="111111111"
                android:textColor="@color/font_666"
                android:textSize="@dimen/fontSize_10sp" />

            <TextView
                android:id="@+id/flatTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/createTime"
                android:layout_marginTop="@dimen/dp_5"
                android:text="111111111"
                android:textColor="@color/font_666"
                android:textSize="@dimen/fontSize_10sp" />

            <TextView
                android:id="@+id/flatPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/createTime"
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_marginTop="@dimen/dp_5"
                android:layout_toRightOf="@id/flatTime"
                android:text="111111111"
                android:textColor="@color/font_666"
                android:textSize="@dimen/fontSize_10sp" />
        </RelativeLayout>

        <TextView
            android:id="@+id/profit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/contentLayout"
            android:layout_alignParentRight="true"
            android:text="+19999.00"
            android:textColor="@color/default_red"
            android:textSize="@dimen/fontSize_15sp" />
    </RelativeLayout>

    <include layout="@layout/ly_line" />
</LinearLayout>